FROM loads/alpine:3.8

###############################################################################
#                                INSTALLATION
###############################################################################

ENV WORKDIR                 /app
# ADD resource                $WORKDIR/
ADD ./bin/linux_amd64/rsshub $WORKDIR/rsshub
RUN chmod +x $WORKDIR/rsshub

###############################################################################
#                                   START
###############################################################################
WORKDIR $WORKDIR
CMD ./rsshub
